    <style>
        body {
  font-family: 'Poppins', sans-serif;
  background: white; /* Blue to Dark Grey Gradient */
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  margin: 0;
}

.signup-container {
  background: white;
  padding: 2rem;
  border-radius: 12px;
  box-shadow: 0px 8px 16px rgba(0, 123, 255, 0.2); /* Subtle Blue Shadow */
  max-width: 400px;
  width: 100%;
  text-align: center;
}

.signup-container h2 {
