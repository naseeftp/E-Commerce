  padding: 12px;
  margin: 8px 0;
  border: 1px solid #007BFF; /* Blue Border */
  border-radius: 6px;
  background: #F2F2F2;
  font-size: 1rem;
  color: #343A40; /* Dark Grey Text */
}

.errormessage {
  color: red;
  font-size: 0.8rem;
  text-align: left;
  margin-bottom: 5px;
}

.button-group {
  display: flex;
  justify-content: space-between;
  gap: 10px;
  margin-top: 10px;
}

.signup-btn, .google-btn {
  flex: 1;
  padding: 12px;
  border: none;
  border-radius: 6px;
  font-size: 1rem;
  cursor: pointer;
  text-align: center;
}

/* Signup Button */
.signup-btn {
  background: #FFC107; /* Yellow/Gold for CTA */
  color: #343A40; /* Dark Grey Text */
}

.signup-btn:hover {
  background: #E0A800; /* Slightly Darker Yellow */
}

/* Google Button */
.google-btn {
