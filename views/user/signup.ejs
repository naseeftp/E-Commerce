  color: #FFFFFF; /* White */
  text-decoration: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.google-btn:hover {
  background: #007BFF; /* Blue */
}

/* Login Link */
.login-link {
  margin-top: 15px;
  font-size: 0.9rem;
}

.login-link a {
  color: #007BFF; /* Bright Blue */
  text-decoration: none;
  font-weight: 600;
}

